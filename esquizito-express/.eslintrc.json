{
  "extends": [
    "airbnb-base",
    "plugin:import/recommended",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "module-resolver"
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "func-names": "off",
    "import/prefer-default-export": "off",
    "module-resolver/use-alias": 2
  },
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    }
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  }
}
